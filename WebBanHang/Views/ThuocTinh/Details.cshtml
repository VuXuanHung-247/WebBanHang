@model WebBanHang.Models.Entity.ThuocTinh
@{
    ViewBag.Title = "Thuộc tính";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết thuộc tính sản phẩm</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thuộc tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenThuocTinh)
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

    </dl>
</div>
<div class="row" style="padding: 15px">
    <button onclick="location.href='@Url.Action("Index","ThuocTinh")'">
        <i class="fa fa-fw fa-arrow-left"></i> Về danh sách
    </button>
    <button onclick="location.href='@Url.Action("Edit","ThuocTinh", new { id = Model.ThuocTinhID })'">
        Chỉnh sửa
    </button>
</div>