@model WebBanHang.Models.Entity.DonViTinh

@{
    ViewBag.Title = "Đơn vị tính";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa đơn vị tính</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DonViTinhID)

        <div class="form-group">
            <div class="control-label col-md-2"> Tên đơn vị</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDonVi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDonVi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div class="row" style="padding: 15px">
    <button onclick="location.href='@Url.Action("Index","DonViTinh")'">
        <i class="fa fa-fw fa-arrow-left"></i> Về danh sách
    </button>
</div>