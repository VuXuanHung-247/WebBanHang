@model WebBanHang.Models.Entity.DonViTinh

@{
    ViewBag.Title = "Đơn vị tính";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa đơn vị tính</h2>

<h3>Bạn có chắc chắn muốn xóa đơn vị này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên đơn vị
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenDonVi)
        </dd>

    </dl>
    @if (TempData["mgs"] != null)
    {
        <div style="color:red">@TempData["mgs"]</div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />

        </div>
    }
</div>
<div class="row" style="padding: 15px">
    <button onclick="location.href='@Url.Action("Index","DonViTinh")'">
        <i class="fa fa-fw fa-arrow-left"></i> Về danh sách
    </button>
</div>