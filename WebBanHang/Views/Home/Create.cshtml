@model WebBanHang.Models.Entity.User
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cart-table-area section-padding-100">
    <div class="container-fluid">
        <h2>Đăng kí</h2>
