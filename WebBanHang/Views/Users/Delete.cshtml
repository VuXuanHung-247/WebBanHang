@model WebBanHang.Models.Entity.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa User</h2>

<h3>Bạn có chắc chắn muốn xóa người dùng này?</h3>
<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>User</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Ngày lập</dt>

            <dd>
                @Html.DisplayFor(model => model.NgayLap)
            </dd>

            <dt>Họ và tên</dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>Email</dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>Địa chỉ</dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>Loại user</dt>

            <dd>
                @Html.DisplayFor(model => model.LoaiUser)
            </dd>

            <dt>PassWord</dt>

            <dd>
                @Html.DisplayFor(model => model.PassWord)
            </dd>

            <dt>Tài khoản</dt>

            <dd>
                @Html.DisplayFor(model => model.TaiKhoan)
            </dd>

            <dt>Ghi chú</dt>

            <dd>
                @Html.DisplayFor(model => model.GhiChu)
            </dd>

        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" />

        </div>
    }
</div>
<div class="row" style="padding: 15px">
    <button onclick="location.href='@Url.Action("List","Users")'">
        <i class="fa fa-fw fa-arrow-left"></i> Về danh sách
    </button>
</div>
